@page "/genreControl"
@using DataBase.Entities;
@inject DataBase.Operations.IDefaultOperationDbEntity<Genre> genreServ;
<RadzenDropDown Data="@genres" @bind-Value="value"></RadzenDropDown>
@code {
    List<DataBase.Entities.Genre> genres = new();
    protected async override Task OnInitializedAsync()
    {
        genres = await genreServ.GetAll();
    }
    int value = 0;
    [Parameter]
    public EventCallback<int> EventCallback { get; set; }
    [Parameter]
    public int ValueChanged
    {
        get => value; set
        {
            this.value = value;
            EventCallback.InvokeAsync(this.value);
        }
    }
}
