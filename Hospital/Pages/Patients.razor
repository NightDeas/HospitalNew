@page "/Patients"
@using System.Net.Http.Json

<MudGrid>
    <MudItem xs="3">
        <MudStack>
            <MudText class="pa-4 mr-16" Align="Align.Center" Typo="Typo.h5">Фильтры</MudText>
            <MudCheckBox Label="ФИО" Color="Color.Primary" Disabled="true" Value="true"></MudCheckBox>
            <MudCheckBox Label="Дата рождения" @bind-Value="dateOfBirthColumnVisibile"></MudCheckBox>
            <MudCheckBox Label="Адрес" Value="true"></MudCheckBox>
        </MudStack>
    </MudItem>
    <MudItem xs="9">
        <MudDataGrid Items="@patients">
            <Columns>
                <PropertyColumn Property="x => x.FullName" Title="ФИО" />
                <PropertyColumn Hidden="@(!dateOfBirthColumnVisibile)" Property="x => x.DateOfBirth" Title="Дата рождения" />
                <PropertyColumn Property="x => x.Address" Title="Адрес" />
                <PropertyColumn Property="x => x.WorkAddress" Title="Рабочий адрес" />
                <PropertyColumn Property="x => x.Telephone" Title="Телефон" />
                <PropertyColumn Property="x => x.Email" Title="Почта" />
                <PropertyColumn Property="x => x.GenreId" Title="Пол" />
                <PropertyColumn Property="x => x.Passport" Title="Паспорт" />
            </Columns>
        </MudDataGrid>
    </MudItem>
</MudGrid>

@code {
    bool dateOfBirthColumnVisibile = true;


    public int _spcaing = 6;
